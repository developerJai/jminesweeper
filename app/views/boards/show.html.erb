<%=turbo_frame_tag "test" do%>
<div class="container-fluid d-flex flex-column align-items-center justify-content-center my-5">
  <div class="row w-100">
    <div class="col-md-12">
      <div class="card m-auto"  style="width:80%;">
        <div class="card-body d-flex align-items-center justify-content-between">
          <div>
            <h5 class="card-title">Generated minesweeper board</h5>
            <p class="card-text"><strong>Board Name:</strong> <%= @board.name %></p>
            <p class="card-text"><strong>Generated by:</strong> <%= @board.user.email %></p>
          </div>
          <%= link_to 'Back to Index', boards_path, class: 'btn btn-primary float-right' %>
        </div>
      </div>
      <div class=" d-flex align-items-center justify-content-center p-5 mt-5 overflow-auto  text-nowrap  w-100 ">
        <div clas="overflow-auto" style="max-width: 1500px;" >
          <% @board.board_data.each_with_index do |row, rind| %>
          <% row.each_with_index do |cell, cind| %>
          <button class="bg-light p-1 me-0.5 mt-1 border border-2 mine-box" row="<%=rind%>" col="<%=cind%>">
          <%if cell == 'B' %>
          <div class="d-flex align-items-center justify-content-center">
            <img src="<%=asset_url("mine.png")%>" class="w-100 h-auto">
          </div>
          <%end%>
          </button>
          <% end %>
          <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%end%>