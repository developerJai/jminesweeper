<div class="container m-4">
  <div class="row">
    <div class="col-md-12">
    	<div class="card">
        <div class="card-body">
          <h5 class="card-title">Minesweeper Board Generated by</h5>
          <p class="card-text"><strong>Name:</strong> <%= @board.name %></p>
          <p class="card-text"><strong>Email:</strong> <%= @board.user.email %></p>
        </div>
      </div>
      <br>
      <div class="align-items-center p-5">
        <% @board.board_data.each_with_index do |row, rind| %>
          <% row.each_with_index do |cell, cind| %>
            <button class="bg-light p-1 me-0.5 mt-1 border border-2 mine-box" row="<%=rind%>" col="<%=cind%>">
              <%if cell == 'B' %>
              <div class="d-flex align-items-center justify-content-center">
                <img src="<%=asset_url("mine.png")%>" class="w-100 h-auto">
              </div>
              <%end%>
            </button>
          <% end %>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>