<%=turbo_frame_tag "test" do%>
<style type="text/css">
.my-custom-pagination {
border: 1px solid #555;
padding: 10px;
}
</style>
<div class="container">
  <br>
  <h2>All Generated Boards</h2>
  <br>
<%= form_tag boards_path, method: :get, class: "form-inline" do %>
  <div class="d-flex justify-content-between filter-container relative">
    <label>Filter boards</label><br>
    <input
      type="text"
      value="<%= params[:keyword] %>"
      name="keyword"
      class="form-control w-50"
      id="filter"
      placeholder="Filter by board name or email"
      data-controller="filter"
      data-action="input->filter#filter"
      data-target="filter.input"
    >
    <a href="<%= new_board_path %>" class="btn btn-success w-25">Generate New board</a>
  </div>
<% end %>

<input
  type="text"
  name="keyword"
  class="form-control w-50"
  id="filter"
  data-controller="filter"
  data-action="input->filter#filter"
  placeholder="Search..."
/>

  <table class="table table-striped">
    <thead>
           <tr>

        <th>Board Name</th>
        <th>Email</th>
        <th>Width</th>
        <th>Height</th>
        <th>Total Mines</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
      <% @boards.each do |board| %>
      <tr data-target="filter.tableRow">
        <td><a href="<%= board_path(board.id) %>"><%= board.name %></a></td>
        <td><%= board.user.email %></td>
         <td><%= board.width %></td>
         <td><%= board.height %></td>
         <td><%= board.mines %></td>
        <td><small><%= board.created_at.strftime('%B %d, %Y %I:%M %p') %></small></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-lg-12">
      <div class="container pagination justify-content-center" >
        <%= will_paginate @boards, renderer: BootstrapPagination::Rails, class: "my-custom-pagination" %>
      </div>
    </div>
  </div>
</div>
<br>
<%end%>